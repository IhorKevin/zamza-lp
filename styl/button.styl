.button
    display inline-flex
    align-items center
    box-sizing border-box
    padding 0 15px
    height 100px
    background-color transparent
    border 3px solid #ffffff
    font-family "Proxima Nova Lt", sans-serif
    font-size 24px
    font-weight 600
    color #ffffff
    uppercase()
    text-decoration none

    &:hover
        background-color rgba(#ffffff, 15%)
